{
  "entity": "seo_AfterActionReport",
  "views": [
    {
      "schemaName": "seo_DraftAARs",
      "displayName": "Draft After-Action Reports",
      "entity": "seo_AfterActionReport",
      "description": "After-action reports in Draft status, sorted by creation date descending.",
      "viewType": "Public",
      "isDefault": true,
      "columns": [
        { "name": "seo_reportTitle", "width": 250 },
        { "name": "seo_incidentId", "width": 150 },
        { "name": "seo_authorId", "width": 150 },
        { "name": "seo_reportStatus", "width": 100 },
        { "name": "seo_outcome", "width": 120 },
        { "name": "seo_civilianInjuries", "width": 80 },
        { "name": "seo_responderInjuries", "width": 80 },
        { "name": "seo_estimatedPropertyLoss", "width": 120 }
      ],
      "filter": {
        "type": "and",
        "conditions": [
          {
            "column": "seo_reportStatus",
            "operator": "eq",
            "value": "Draft"
          }
        ]
      },
      "sortOrder": [
        { "column": "createdon", "direction": "Descending" }
      ]
    },
    {
      "schemaName": "seo_CompletedAARs",
      "displayName": "Completed After-Action Reports",
      "entity": "seo_AfterActionReport",
      "description": "After-action reports in Approved or Final status, sorted by completion date descending.",
      "viewType": "Public",
      "isDefault": false,
      "columns": [
        { "name": "seo_reportTitle", "width": 250 },
        { "name": "seo_incidentId", "width": 150 },
        { "name": "seo_authorId", "width": 150 },
        { "name": "seo_reportStatus", "width": 100 },
        { "name": "seo_outcome", "width": 120 },
        { "name": "seo_civilianInjuries", "width": 80 },
        { "name": "seo_responderInjuries", "width": 80 },
        { "name": "seo_estimatedPropertyLoss", "width": 120 },
        { "name": "seo_completedOn", "width": 160 },
        { "name": "seo_lessonsLearned", "width": 200 }
      ],
      "filter": {
        "type": "and",
        "conditions": [
          {
            "column": "seo_reportStatus",
            "operator": "in",
            "values": ["Approved", "Final"]
          }
        ]
      },
      "sortOrder": [
        { "column": "seo_completedOn", "direction": "Descending" }
      ]
    }
  ]
}